<h2>Edit Organisation</h2>
<%= form_for @organisation do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :hourly_rate %><br />
    <%= f.number_field :hourly_rate, in: 0.01..100.00, step: 0.01 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
<%= link_to "Delete", organisation_path(@organisation), method: :delete %>