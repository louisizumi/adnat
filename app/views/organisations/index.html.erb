<div data-controller="organisations">
  <h2>Organisations</h2>
  <% if @organisations.length > 0 %>
    <ul data-organisations-target="list">
      <% @organisations.each do |organisation| %>
        <%= render "organisations", organisation: organisation %>
      <% end %>
    </ul>
  <% else %>
    <p>There are no organisations.</p>
    <p>Create a new one using the form below.</p>
  <% end %>

  <h2>Create Organisation</h2>
  <%= form_for @organisation, data: { organisations_target: "form" }, remote: true do |f| %>
    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :hourly_rate %><br />
      <%= f.number_field :hourly_rate, step: 0.01 %>
    </div>
    <div class="actions">
      <%= f.submit data: { action: "submit->organisations#submit" } %>
    </div>
  <% end %>
</div>